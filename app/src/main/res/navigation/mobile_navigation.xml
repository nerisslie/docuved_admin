<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.siren.docuved_admin.ui.fragment.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_explore"
        android:name="com.siren.docuved_admin.ui.fragment.ExploreFragment"
        android:label="Daftar Siswa"
        tools:layout="@layout/fragment_explore" />

    <fragment
        android:id="@+id/navigation_add"
        android:name="com.siren.docuved_admin.ui.fragment.RegisterFragment"
        android:label="Tambah Siswa"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/navigation_file"
        android:name="com.siren.docuved_admin.ui.fragment.FileFragment"
        android:label="Unggah Berkas"
        tools:layout="@layout/fragment_file" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.siren.docuved_admin.ui.fragment.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>