<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="30dp"
        android:background="#322F2F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/daftarsiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Daftar Sebagai Siswa"/>

        <EditText
            android:id="@+id/nisn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/daftarsiswa"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:background="@drawable/roundedbutton3"
            android:hint="Nomor Induk Siswa Nasional"
            android:inputType="number" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/nisn"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:background="@drawable/roundedbutton3"
            android:hint="Nama Siswa"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/katasandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:background="@drawable/roundedbutton3"
            android:hint="Kata Sandi"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/konfirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/katasandi"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:background="@drawable/roundedbutton3"
            android:hint="Konfirmasi Kata Sandi"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/konfirmpassword"
            android:background="@drawable/roundedbutton"
            android:shadowRadius="0"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="SUBMIT"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/copyright"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>