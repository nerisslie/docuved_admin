<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="#322F2F"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Unggah Berkas"
            android:textSize="22sp"
            android:textColor="#FFFFFF"/>
    </FrameLayout>

    <Space
        android:id="@+id/space1"
        android:layout_below="@id/frame1"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <FrameLayout
        android:id="@+id/frame2"
        android:layout_below="@id/space1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="#322F2F"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/nisn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton3"
                android:hint="Nomor Induk Siswa Nasional"
                android:inputType="number"
                android:paddingLeft="20dp" />
            <EditText
                android:id="@+id/noberkas"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/nisn"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton3"
                android:hint="No. Berkas"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"/>

            <Spinner
                android:id="@+id/jenisberkas"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/noberkas"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton3"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"/>

            <Spinner
                android:id="@+id/kelas"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/jenisberkas"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton3"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/keterangan"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_below="@id/kelas"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton3"
                android:hint="Keterangan"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textAlignment="viewStart"
                android:paddingTop="10dp"
                android:gravity="top"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/unggahberkas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Unggah Berkas.."
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_insert_drive_file_white_24dp"
                android:layout_below="@id/keterangan"
                android:layout_marginStart="70dp"
                android:textSize="14sp" />


            <Space
                android:id="@+id/spacedaftar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/unggahberkas"/>

            <Button
                android:id="@+id/button1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/spacedaftar"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton"
                android:shadowRadius="0"
                android:text="MASUK"
                android:textColor="#000000"
                android:textSize="16sp" />

        </RelativeLayout>

    </FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#322F2F"
        app:menu="@menu/bottomnav" />

</RelativeLayout>